<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#014421"
    tools:context=".Productdesc_two">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:padding="5dp"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="597dp"
            android:layout_weight="1"
            android:src="@drawable/mango" />



        <!-- Description -->
        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/descriptionTextView2"
            android:layout_width="match_parent"
            android:text="Mango Plant\n\nGrowth Conditions:\n\n- Temperature: Optimal temperature range is 75째F to 86째F (24째C to 30째C).\n\n- Sunlight: Requires full sun exposure (6 to 8 hours of direct sunlight per day).\n\n- Soil: Well-drained soil with good fertility and organic matter content.\n\n- Watering: Regular watering to keep the soil consistently moist.\n\n- Nutrients: Requires nitrogen-rich fertilizers for healthy growth.\n\n- pH Level: Preferred pH range is 5.8 to 7.0.\n\n- Pests and Diseases: Monitor for common pests and diseases like corn borers, armyworms, and fungal infections." />


        <Button
            android:id="@+id/button_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click to pay"
            android:onClick="onClick"
            android:backgroundTint="#B5F3EDED"
            android:layout_margin="16dp"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>